<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <h1 class="display-3">Student</h1>
        </div>
        <div class="row">

            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th scope="col">StudentID</th>
                        <th scope="col">StudentName</th>
                        <th scope="col">Major</th>
                        <th scope="col">Faculty</th>
                        <th scope="col">Subject</th>

                        <th scope="col" colspan="2">Actions
                            <a name="button" id="button" class="btn btn-primary" href="/student/create" role="button">Add New Student</a>
                        </th>

                    </tr>
                </thead>
                <tbody>
                    <% student.forEach(function(s){ %>
                        <tr>
                            <th scope="row">
                                <%= s.sid %>
                            </th>
                            <td>
                                <%= s.name %>
                            </td>
                            <td>
                                <%= s.major %>
                            </td>
                            <td>
                                <%= s.faculty %>
                            </td>
                            <td>
                                <%= s.subject %>
                            </td>
                            <td>
                                <a name="button" class="btn btn-info" href="/student/detail/<%= s.sid %>" role="button">View </a>
                                <a name="button" class="btn btn-primary" href="/student/edit/<%= s.sid %>" role="button">Edit</a>
                                <!-- <a name="button" id="button" class="btn btn-primary" href="/student/<%= s.StudentID %>" role="button">Delete</a> -->

                            </td>
                            <td><button class="btn btn-danger" data-toggle="modal" data-target="#exampleModal<%= s.sid %>">Delete</button>
                                <div class="modal fade" id="exampleModal<%= s.sid %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLabel">Are you sure?</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                            </div>
                                            <div class="modal-body">
                                                Student Name : "
                                                <%= s.name %>" Do you want to delete this?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <a href="/student/delete/<%= s.sid%>" class="btn btn-primary">Save changes</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>

                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>

        <% include ../partials/footer %>